{
  "name": "pdf-formatter",
  "version": "1.1.4",
  "description": "fix open all files",
  "main": "./src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron src/main.js",
    "build": "electron-builder -w"
  },
  "author": "Clevertec",
  "license": "ISC",
  "postinstall": "electron-builder install-app-deps",
  "build": {
    "productName": "doc-gen",
    "appId": "e1",
    "electronVersion": "28.2.1",
    "files": [
      "./src/**"
    ],
    "extraFiles": [
      {
        "from": "./assets",
        "to": "./resources/assets"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "doc-gen.exe"
    },
    "directories": {
      "output": "./dist",
      "buildResources": "build"
    },
    "compression": "store"
  },
  "dependencies": {
    "@date-fns/utc": "^1.1.1",
    "convert-excel-to-json": "^1.7.0",
    "date-fns": "^3.3.1",
    "docx-merger": "^1.2.2",
    "docxtemplater": "^3.28.2",
    "luxon": "^3.4.4",
    "number-to-words-ru": "^2.3.2",
    "pizzip": "^3.1.1"
  },
  "devDependencies": {
    "electron": "^28.2.1",
    "electron-builder": "24.9.1"
  }
}
